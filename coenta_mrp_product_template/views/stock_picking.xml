<odoo>

    <record id="stock_picking_form_view" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="owner_id" position="after">
                <field name="mrp_product_template_ids" widget="many2many_tags"
                       attrs="{'invisible':[('mrp_product_template_ids','=',[])]}"/>
            </field>
        </field>
    </record>

    <record id="stock_picking_search_view" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='picking_type']" position="after">
                <filter name="group_by_mrp_product_template" string="MRP Product Template"
                        context="{'group_by':'mrp_product_template_ids'}"/>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_tree_view" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="mrp_product_template_ids" widget="many2many_tags"
                       attrs="{'invisible':[('mrp_product_template_ids','=',[])]}"/>
            </xpath>
        </field>
    </record>

</odoo>
